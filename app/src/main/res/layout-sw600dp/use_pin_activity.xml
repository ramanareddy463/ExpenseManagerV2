<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_large_withlogo">

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dip"
        android:layout_marginStart="100dip"
        android:layout_toRightOf="@+id/view"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVieww"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:text="New To Expense Manager?"
                android:textColor="#d4e157"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_background"
                android:text="@string/sign_up"
                android:textColor="@color/editTextBackgroundWhite"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Pin"
            android:textColor="#d4e157"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_enter_pin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/editTextBackgroundWhite"
            android:ems="9"
            android:gravity="center_vertical"
            android:hint=""
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:text=""
            android:textColor="@color/yellow"
            android:textSize="20dp" />

        <GridLayout
            android:id="@+id/grdnumpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:columnCount="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn1"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_row="1"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="1"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn2"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="1"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="2"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn3"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:layout_row="1"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="3"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn4"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_row="2"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="4"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn5"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="2"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="5"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn6"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:layout_row="2"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="6"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn7"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_row="3"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="7"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn8"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="3"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="8"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn9"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:layout_row="3"
                android:background="@color/transparentGray"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="9"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn_ok"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_row="4"
                android:background="@color/transparentGray"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="20dp"
                android:text="OK"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn0"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_row="4"
                android:background="@color/transparentGray"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="0"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/btn_clear"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_row="4"
                android:background="@color/blue"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:text="  " />


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/forgot_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_background"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Forgot Pin"
                android:textColor="@color/yellow" />

            <Button
                android:id="@+id/use_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_background"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Use Password"
                android:textColor="@color/yellow" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>