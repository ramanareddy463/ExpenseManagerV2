<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_add_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_add_expense"
        android:layout_alignBottom="@id/img_add_expense"/>

    <LinearLayout
        android:id="@+id/linear_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_add_expense"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_weight="2"
            android:layout_marginLeft="30dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#234234"
                android:id="@+id/img_bill" />


            <ImageView
                android:id="@+id/img_rescan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@id/img_bill"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re Scan"
                android:layout_below="@id/img_rescan"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="8"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:background="#123456"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_height="match_parent"
                android:background="#000000">




            </ScrollView>



        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>