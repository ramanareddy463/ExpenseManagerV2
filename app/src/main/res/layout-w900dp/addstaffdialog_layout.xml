<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:id="@+id/tangiblelinear">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:background="@drawable/edit_text_border"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:weightSum="1">
        <TextView
            android:text="Add Staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#1fb598"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#1fb598"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/editText3"
            android:background="@drawable/edit_text_border"
            android:layout_marginTop="20dp"
            android:layout_weight="0.12" />
            </LinearLayout>

            <ImageButton
                android:background="@drawable/circular_view"
                android:id="@+id/btnMore"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center|end"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/adduser"
                android:scaleType="centerCrop"/>
        </RelativeLayout>

        <TextView
            android:text="Shift Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="20dp"
            android:textColor="#1fb598"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="1">
        <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:id="@+id/spinnershift1"
            android:layout_weight="0.3"/>
            <TextView
                android:text="to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/texfftView6"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.05"
                android:gravity="center"/>
            <Spinner
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_border"
            android:ems="10"
            android:id="@+id/spinnershift2"
                android:layout_weight="0.3"/>
            </LinearLayout>

        <TextView
            android:text="Shift time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="20dp"
            android:textColor="#1fb598"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="1">
            <Spinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:id="@+id/spinnertime1"
                android:layout_weight="0.3"/>
            <TextView
                android:text="to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/texfftkoView6"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.05"
                android:gravity="center"/>
            <Spinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:id="@+id/spinnertime2"
                android:layout_weight="0.3"/>
        </LinearLayout>

        <TextView
            android:text="Started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ggg"
            android:layout_marginTop="20dp"
            android:textColor="#1fb598"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/gggfgg"
            android:background="@drawable/edit_text_border"
            android:layout_marginTop="20dp"/>
        <TextView
            android:text="Current Salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ggghg"
            android:layout_marginTop="20dp"
            android:textColor="#1fb598"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="1">
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:id="@+id/editTasrext4"
                android:layout_marginRight="10dp"
                android:layout_weight="0.3"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:id="@+id/spinnersal"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.3"/>
        </LinearLayout>

        <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addstafftodb"
            android:background="#1fb598"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="25dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <Button
        android:text="X"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:id="@+id/cancelstaffdialog"
        android:background="#d4e15f"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:textSize="30sp"/>
    </LinearLayout>
</ScrollView>