<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_large_withlogo">

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="100dip"
        android:layout_marginLeft="100dip"
        android:layout_toRightOf="@+id/view">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:text="New To Expense Manager?"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/textVieww"
            android:textColor="#d4e157"
            android:textStyle="bold"
            android:gravity="center_vertical"/>

        <Button
            android:text="@string/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up"
            android:background="@drawable/button_background"
            android:textStyle="bold"
            android:textColor="@color/editTextBackgroundWhite"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

        <TextView
            android:text="Enter Pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d4e157"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:ems="9"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_enter_pin"
            android:textColor="@color/yellow"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:background="@color/editTextBackgroundWhite"
            android:hint=""
            android:paddingLeft="6dp"/>

        <GridLayout
            android:id="@+id/grdnumpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:columnCount="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn1"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_row="1"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="1" />

            <TextView
                android:id="@+id/btn2"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="2" />

            <TextView
                android:id="@+id/btn3"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:layout_row="1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="3" />

            <TextView
                android:id="@+id/btn4"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_row="2"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="4" />

            <TextView
                android:id="@+id/btn5"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="2"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="5" />

            <TextView
                android:id="@+id/btn6"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:layout_row="2"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="6" />

            <TextView
                android:id="@+id/btn7"
                android:layout_column="0"
                android:layout_margin="2dp"
                android:layout_row="3"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="7" />

            <TextView
                android:id="@+id/btn8"
                android:layout_column="1"
                android:layout_margin="2dp"
                android:layout_row="3"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="8" />

            <TextView
                android:id="@+id/btn9"
                android:layout_column="2"
                android:layout_margin="2dp"
                android:layout_row="3"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/yellow"
                android:background="@color/transparentGray"
                android:text="9" />

            <TextView
                android:id="@+id/btn0"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_row="4"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@color/transparentGray"
                android:textColor="@color/yellow"
                android:gravity="center"
                android:text="0" />
            <TextView
                android:id="@+id/btn_clear"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_row="4"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@color/blue"
                android:gravity="center"
                android:text="  " />


        </GridLayout>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp">

            <Button
                android:text="Forgot Pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgot_pin"
                android:background="@drawable/button_background"
                android:textColor="@color/yellow"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:text="Use Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/use_password"
                android:background="@drawable/button_background"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/yellow"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>