<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/edit_text_background"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/circular_view" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.45"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/staffname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Name"
                android:textColor="#1fb598"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Senior Assistant"
                android:textColor="#1fb598"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.35"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/yy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="MON to FRI"
                android:textColor="#1fb598"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hhhh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="10:00 to 18:00"
                android:textColor="#1fb598"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.1"
            android:background="#1fb598"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gggyy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center"
                android:text="Edit"
                android:textColor="#fff"
                android:textSize="16sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/ykoy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_vertical|center"
            android:text="88 61 79 77 91"
            android:textColor="#1fb598"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hhoohh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_vertical|center"
            android:text="$50/hr"
            android:textColor="#1fb598"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:background="#c3c3c3"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imafffgeView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/circular_view" />

        <TextView
            android:id="@+id/hhojjjjohh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="JhonDoe@gmail.com"
            android:textColor="#1fb598"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imafffgeVffiew3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/circular_view" />

        <TextView
            android:id="@+id/hhojjfffjjohh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="#123, north road,oakley,victory 45673"
            android:textColor="#1fb598"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imaffffssffgeView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/circular_view" />

        <TextView
            android:id="@+id/hhojgjijjjohh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="10/01/2016 to present"
            android:textColor="#1fb598"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>